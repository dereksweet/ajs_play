<!-- Reference controller for this page --->
<%= javascript_include_tag asset_path('angular/controllers/pages/directives.js') %>

<!-- Reference any directives to be employed -->
<%= javascript_include_tag asset_path('angular/directives/ng-show-hide.js') %>
<%= javascript_include_tag asset_path('angular/directives/ng-current-time.js') %>
<%= javascript_include_tag asset_path('angular/directives/ng-make-blue.js') %>

<% content_for :title do %>AngularJS Playground - Directives<% end %>

<div ng-app="directivesApp" ng-controller="directivesCtrl" ng-cloak>
  <div class="section-header">
    <div class="section-title">Simple Directives</div>
    <div class="section-description">A series of simple directives that come pre-built with AngularJS</div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngModel Directive</span><br>
          <span class="example-description">Simple bound input that repeats whatever you type inside it in the div below it.</span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 medium-2 columns medium-text-right">Enter Something:</div>
            <div class="small-12 medium-10 columns"><input ng-model="boundinput" type="text" style="width: 200px;"></div>
          </div>
          <div class="row">
            <div class="small-12 medium-2 columns medium-text-right">You Entered:</div>
            <div class="small-12 medium-10 columns">&nbsp;{{ boundinput }}&nbsp;</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngShow Directive</span><br>
          <span class="example-description">Slightly more complex bound input that will evaluate whatever mathmatical expression is passed in. If it sums to 10 then a message will appear!</span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 medium-3 columns medium-text-right">Enter Mathmatical Expression:</div>
            <div class="small-12 medium-9 columns">
              <input ng-model="mathexpression" type="text" style="width: 200px; display: inline-block"><br>
            </div>
          </div>
          <div class="row">
            <div class="small-12 medium-9 columns right">
              &nbsp;<span ng-show="$eval(mathexpression) == 10">I appear when the expression is equal to 10!</span>&nbsp;
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngClick Directive</span><br>
          <span class="example-description">Buttons that add and subtract one to or from the counter each time you click them. Simple as pie!</span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 columns left">
              <div class="row" ng-init="count = 0">
                <div class="small-4 medium-1 columns text-center valign-middle">
                  <br>
                  <span class="underline">Count</span><br>
                  {{ count }}
                </div>
                <div class="small-4 medium-2 columns end">
                  <button class="button tiny radius" ng-click="count = count + 1">+1</button><br>
                  <button class="button tiny radius" ng-click="count = count - 1">-1</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngRepeat Directive</span><br>
          <span class="example-description">
            Defines the following array: ['1', '2', '3'], and then repeats &lt;p&gt; tags displaying the contents.
            Click the button below to add an item to the array.
          </span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 columns left">
              <button class="button tiny radius" ng-click="my_count = my_count + 1;my_array.push(my_count)">Add an Item</button>
            </div>
          </div>
          <div class="row" ng-init="my_array = ['1', '2', '3']; my_count = 3">
            <div class="small-12 medium-6 columns left">
              <span ng-repeat="item in my_array">{{item}}<span ng-if="!$last">, </span></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br>

  <div class="section-header">
    <div class="section-title">Custom Directives</div>
    <div class="section-description">Custom directives that have been defined for this playground specifically</div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngShowHide</span><br>
          <span class="example-description">
            A custom directive, ngShowHide, has been defined in the controller script. It can be included as it's own tag like &lt;ng-showHide&gt; or as an attributes like &lt;div ng-showHide&gt;.
            A 'scope: {}' param has been added as well to make all scope variables local per the instance.
          </span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 medium-3 columns left">Attribute (<b>&lt;div ng-show-hide&gt;</b>):</div>
            <div class="small-12 medium-9 columns left">
              <div ng-show-hide></div>
            </div>
          </div>
          <div class="row">
            <div class="small-12 medium-3 columns left">Tag (<b>&lt;ng-show-hide&gt;</b>):</div>
            <div class="small-12 medium-9 columns left">
              <ng-show-hide />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngCurrentTime</span><br>
          <span class="example-description">
            Another custom directive, ngCurrentTime, has been defined that simply shows the current time and keeps it updated.
          </span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 columns left">
              <b>CurrentTime</b>: &nbsp; <ng-current-time />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">ngMakeBlue</span><br>
          <span class="example-description">
           A transclusion directive example, makes whatever text is wrapped in the tag blue
          </span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 columns left">
              <ng-make-blue>This is not red..</ng-make-blue>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
