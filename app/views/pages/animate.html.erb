<!-- Reference controller for this page --->
<%= javascript_include_tag asset_path('angular/controllers/pages/animate.js') %>

<% content_for :title do %>AngularJS Playground - Animate<% end %>

<div ng-app="animateApp" ng-cloak>
  <div class="section-header">
    <div class="section-title">Animation</div>
    <div class="section-description">
      A sample of what can be done with Angular Animation. You don't interact directly with ngAnimate, instead you just
      define your styles like you would for CSS3 animation and use ngAnimate directives to control the addition and
      removal of those styles.
    </div>
  </div>
  <div class="row" ng-controller="animateCtrl">
    <div class="small-12 columns">
      <div class="example">
        <div class="example-header">
          <span class="example-title">Simple Fade-In-Out</span><br>
          <span class="example-description">This is about as simple as ngAnimate gets. Click the button to make the content fade in and out.</span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 medium-2 columns">
              <button class="button tiny radius" ng-click="data.on=!data.on">Toggle Content</button>
            </div>
            <div class="small-12 medium-6 columns end simple-fade-in-out" ng-if="data.on">
              Look at me fade in and out. Isn't that cool!
            </div>
          </div>
        </div>
      </div>
      <div class="example">
        <div class="example-header">
          <span class="example-title">Slide Animation</span><br>
          <span class="example-description">
            Slide content loaded from a template in and out when you change the selection in the dropdown.
          </span>
        </div>
        <div class="example-body">
          <div class="row">
            <div class="small-12 columns">
              <label for="selected_person">Person:</label>
              <select class="person-dropdown" id="selected_person" ng-model="selected_person" ng-options="p.name for p in people">
                <option value="">Please select a person..</option>
              </select>
              <div class="simple-slide-container">
                <div class="simple-slide" ng-include="selected_person.url"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
