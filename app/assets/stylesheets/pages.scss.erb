@font-face {
  font-family: 'timeless';
  src: url(<%= asset_path('Timeless.ttf') %>);
  font-weight: normal;
  font-style: normal;
}

.section-header {
  width: 100%;
  max-width: 100%;
  background: lightgray;
  background: linear-gradient(#EEEEEE, #FFFFFF);
  border-bottom: 2px solid #EEEEEE;
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 5px;
}

.section-title {
  font-family: 'timeless';
  color: gray;
  font-size: 24px;
}

.section-description {
  font-family: 'timeless';
  font-size: 11px;
  font-weight: bold;
  color: seagreen;
}
