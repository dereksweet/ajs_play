@font-face {
  font-family: 'timeless';
  src: url(<%= asset_path('Timeless.ttf') %>);
  font-weight: normal;
  font-style: normal;
}

.section-header {
  width: 100%;
  max-width: 100%;
  background: lightgray;
  background: linear-gradient(#EEEEEE, #FFFFFF);
  border-bottom: 2px solid #EEEEEE;
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 5px;
}

.section-title {
  font-family: 'timeless';
  color: gray;
  font-size: 24px;
}

.section-description {
  font-family: 'timeless';
  font-size: 11px;
  font-weight: bold;
  color: seagreen;
}


.example {
  border: 1px solid gray;
  background: #EEEEEE;
  background: linear-gradient(#FFFFFF, #EEEEEE);
  padding: 10px;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 20px;
  max-width: 900px;

  .example-header {
    border-bottom: 1px solid #CCCCCC;
    width: 100%;

    .example-title {
      font-family: 'timeless';
      font-size: 18px;
      color: #666666;
    }

    .example-description {
      font-family: 'timeless';
      font-size: 11px;
      font-style: italic;
      color: seagreen;
    }
  }

  .example-body {
    margin-top: 15px;
    width: 100%;
  }
}


.simple-input {
  width: 200px;
}