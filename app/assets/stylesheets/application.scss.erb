@font-face {
  font-family: 'cursive-edgar';
  src: url(<%= asset_path('crusiveedgar.ttf') %>);
  font-weight: normal;
  font-style: normal;
}

.title-area {
  padding-top: 10px;
}

header {
  border-bottom: 2px solid gray;
  background-color: white;

  span {
    display: inline-block;
  }

  a {
    color: white;

    &:hover {
      color: white;
    }
  }

  .logo a{
    font-family: 'cursive-edgar';
    font-size: 34px;
  }
  .logo-desc {
    font-size: 12px;
  }

  .navigation_links {
    padding-top: 25px;
    color: grey;

    .nav-link a {
      color: lightgray;
      text-transform: uppercase;
      font-size: 10px;

      &:hover {
        color: white;
      }
    }
  }
}


footer {
  margin-top: 25px;
  height: 50px;
  width: 100%;
  background-color: #333333;
}

.underline {
  text-decoration: underline;
}
