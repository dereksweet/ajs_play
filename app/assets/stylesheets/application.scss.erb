@font-face {
  font-family: 'cursive-edgar';
  src: url(<%= asset_path('crusiveedgar.ttf') %>);
  font-weight: normal;
  font-style: normal;
}

.top-bar {
    padding-top: 10px;
}

header {
  border-bottom: 2px solid gray;
  background-color: white;

  span {
    display: inline-block;
  }

  a {
    color: white;

    &:hover {
      color: white;
    }
  }
}

.logo a{
  font-family: 'cursive-edgar';
  font-size: 34px;
}
.logo-desc {
  font-size: 12px;
}

.nav-link a {
  color: lightgray;
  padding-right: 20px;
  text-transform: uppercase;
  font-size: 12px;

  &:hover {
    color: white;
  }
}

.navigation_links {
  padding-top: 25px;
  color: grey;
}

footer {
  bottom: 0;
  position: fixed;
  width: 100%;
  height: 50px;
  background-color: #333333;
}

.underline {
  text-decoration: underline;
}
