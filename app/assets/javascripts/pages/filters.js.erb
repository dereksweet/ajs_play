var filtersApp = angular.module("filtersApp", []);

filtersApp.controller('MyFiltersDataCtrl', function ($scope, $timeout) {
    var myData = {
        currentDate: new Date(),
        sampleData:
            [123.65,89.325,23.453,45.66,67.80,23.454]
    };

    $scope.data = myData;
    $scope.myString = 'TestString';

    var updateTime = function() {
        $scope.data.currentDate = new Date();
        $timeout(updateTime, 1000);
    }

    $timeout(updateTime, 100);
});

filtersApp.filter('stripDashes', function () {
    return function(txt) {
        return txt.split('-').join(' ');
    };
});

filtersApp.filter('titleCase', function () {
    return function(str) {
        return str.replace(/\w\S*/g, function(txt) {
            return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase()
        });
    };
})