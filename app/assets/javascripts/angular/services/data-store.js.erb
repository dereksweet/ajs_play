var dataStoreService = function ($http) {
  var dataStore = {};

  dataStore.saveUser = function (user) {
    return $http({ method: 'POST', url: 'api/save_user', data: user });
  };

  dataStore.getUser = function (first_name) {
    return $http({ method: 'GET', url: 'api/get_user?first_name=' + first_name });
  };

  dataStore.deleteUser = function (first_name) {
    return $http({ method: 'DELETE', url: 'api/delete_user?first_name=' + first_name });
  };

  dataStore.getAllUsers = function () {
    return $http({ method: 'GET', url: 'api/get_all_users' });
  };

  dataStore.loadCountries = function (page) {
    return $http({ method: 'GET', url: '/api/countries?page=' + page })
  };

  return dataStore;
};
dataStoreService.$inject = ['$http'];

angular.module(moduleName).factory('dataStoreService', dataStoreService);
